include _article

extends layout

block append vars
  - bodyclass = 'about-page'

block prepend title
  | #{ page.title + " - "}

block content
  article.is-post
    header
      h2= page.title
      if showAuthor
        span.byline
          mixin author(page.metadata.author)
    //-.info
      mixin info-date(page.date)
      mixin info-stats()
    | !{ typogr(page.html).typogrify() }
