doctype html
block vars
  - var bodyclass = null;
html(lang='en')
  head
    base(href=locals.url)
    block head
      title
        block title
          = locals.name
      meta(http-equiv='content-type', content='text/html; charset=utf-8')
      link(rel="icon", type="image/x-icon", href="favicon.ico")
      meta(name='description', content='')
      meta(name='keywords', content='')
      link(href='http://fonts.googleapis.com/css?family=Source+Sans+Pro:400,400italic,700|Open+Sans+Condensed:300,700', rel='stylesheet')
      link(rel='stylesheet', href='css/highlightjs/tomorrow-night.css')
      link(rel='stylesheet', href='css/custom.css')
      script(src='js/jquery.min.js')
      script(src='js/skel.min.js')
      script(src='js/skel-panels.min.js')
      script(src='js/init.js')
      noscript
        link(rel='stylesheet', href='css/skel-noscript.css')
        link(rel='stylesheet', href='css/style.css')
        link(rel='stylesheet', href='css/style-desktop.css')
        link(rel='stylesheet', href='css/style-wide.css')
      //if lte IE 9
        link(rel='stylesheet', href='css/ie9.css')
      //if lte IE 8
        script(src='js/html5shiv.js')
        link(rel='stylesheet', href='css/ie8.css')
      //if lte IE 7
        link(rel='stylesheet', href='css/ie7.css')
      link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)
  //-
    Note: Set the body element's class to "left-sidebar" to position the sidebar on the left.
    Set it to "right-sidebar" to, you guessed it, position it on the right.
  body(class=bodyclass).left-sidebar
    #wrapper
      #content
        #content-inner
          block content
            h2 Welcome to zombocom!
          block footer
            br
            //-strong !!!PUT REAL FOOTER IN HERE!!!

      #sidebar
        #logo
          h1
            a(href=locals.url)= locals.name

        block menu
          include _menu.jade

        section.is-search
          form(method='get', action='http://google.com/search')
            input(type="hidden", name="q", value="site:able.cd")
            input.text(type='text', name='q', results="0", placeholder='Search Site')

        //-#mission.is-text-style1
          .inner
            = locals.mission

        //-section.is-recent-posts
          header
            h2 Recent Posts
          ul
            li
              a(href='#') Nothing happened
            li
              a(href='#') My Dearest Cthulhu
            li
              a(href='#') The Meme Meme
            li
              a(href='#') Now Full Cyborg
            li
              a(href='#') Temporal Flux

        #copyright
          p
            | &copy; #{ new Date().getFullYear() } #{ locals.owner }
            br
            | Generated by: 
            a(href='http://wintersmith.io/') Wintersmith
            br
            | Design: 
            a(href='http://html5up.net/striped') HTML5 UP
